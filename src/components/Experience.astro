---
export interface Props {
    imgLink: string;
    jobTitle: string;
    company: string;
    date: string;
    technologies: string[];
    bulletPoints: string[];
}

const { imgLink, jobTitle, company, date, technologies, bulletPoints } = Astro.props;

import IconComp from "./IconComp.astro";
---

<div class="p-6 bg-gray-900 text-white rounded-lg shadow-md">
    <div class="flex flex-col md:flex-row justify-between items-center mb-4">
        <div class="flex flex-row">
            <div class="flex items-center">
                <img src={imgLink} alt="{jobTitle}" class="w-16 h-16 object-cover rounded-full mr-4" />
            </div>
            <div class="flex flex-col">
                <h2 class="text-xl font-bold">{jobTitle}</h2>
                <p class="text-lg font-semibold">{company}</p>
            </div>
        </div>
        <span class="text-gray-400 text-sm">{date}</span>
    </div>

    <div class="flex flex-wrap gap-2 mb-4">
        {technologies.map((tech) => 
            <IconComp tech={tech} />
        )}
    </div>

    <ul class="list-disc pl-5 space-y-2">
        {bulletPoints.map((point) => <li>{point}</li>)}
    </ul>
</div>

<script>
const techIcons = document.querySelectorAll(".tech-icon");

// for mobile equivalent of :hover, we use touch events
techIcons.forEach((icon) => {
    icon.addEventListener("touchstart", (e) => {
        const span: HTMLSpanElement | null = icon.querySelector("span");
        span!.style.opacity = "1";
        span!.style.visibility = "visible";
        setTimeout(() => {
            span!.style.opacity = "";
            span!.style.visibility = "";
        }, 1000);
    });
});
</script>
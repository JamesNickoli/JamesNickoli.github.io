---

interface Props {
    title: string;
    description: string | string[],
    images: {link:string,alt:string}[],
    link: string | string[],
    technologies: string[];
}

const { title, description, images, link, technologies }: Props = Astro.props;

import Carousel from './Carousel.astro'
import CarouselItem from './CarouselItem.astro'
---

<div>
    <Carousel title={title} description={description}, link={link}, technologies={technologies}>
        {images.map((img) => 
            <CarouselItem>
                <div class="relative flex items-center justify-center h-full">
                    <img class="w-full" src={img.link} alt={img.alt} draggable="false" />
                    <p class="absolute bottom-0 bg-bg-purp-light">{img.alt}</p>
                </div>
            </CarouselItem>
        )}
    </Carousel>
</div>